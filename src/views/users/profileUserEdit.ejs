<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head',{title:"Editar usuario"})%>

<body>

    <%- include('../partials/header-admin')%>

    <main>
        <div class="products-edit-top">
            <h2>EDITAR Usuario : <%= userProfile.email %></h2>
        </div>
        <div class="products-edit-main">
            <div class="title-line"></div>

            <form action="/users/profile/edit/<%=userProfile.id%>" method="POST" class="products-edit-form">   <!--enctype="multipart/form-data"-->

                <div class="form-element">
                    <label for="id">Id:</label>
                    <input type="text" name="id" id="id" readonly value="<%= userProfile.id %>">
                </div>

                <div class="form-element">
                    <label for="name">Nombre:</label>
                    <input type="text" name="name" id="apellido" required value="<%= userProfile.name %>">
                </div>

                <div class="form-element">
                    <label for="lastname">Apellido:</label>
                    <input type="text" name="lastname" id="lastname"required value="<%= userProfile.lastname %>">
                </div>

                <div class="form-element">
                    <label for="dni">DNI:</label>
                    <input type="text" name="dni" id="dni"required value="<%= userProfile.dni %>">
                </div>
                <div class="form-element">
                    <label for="address">Dirección:</label>
                    <input type="text" name="address" id="address"required value="<%= userProfile.address %>">
                </div>
                <div class="form-element">
                    <label for="phone">Teléfono:</label>
                    <input type="text" name="phone" id="phone"required value="<%= userProfile.phone %>">
                </div>

                <div class="form-element">
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email"required value="<%= userProfile.email %>">
                </div>
                <div class="form-element">
                    <label for="password">Contraseña:</label>
                    <input type="password" name="password" id="password"required value="<%= userProfile.password %>">
                </div>
                <div class="form-element">
                    <label for="image">Imagen:</label>
                    <input type="image" name="image" id="image"required value="/img/users/<%= userProfile.image %>">
                </div>
                    <div class="edit-buttons">
                        <a href="/users/profile/" class="form-button form-button-secondary">CANCELAR</a>
                        <button type="reset" class="form-button form-button-secondary">RESTABLECER</button>
                        <button type="submit"  class="form-button form-button-primary">GUARDAR</button>
                    </div>
            </form>
        </div>
    </main>


</body>

</html>