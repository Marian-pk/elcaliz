<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head')%>

<body>

    <%- include('../partials/header')%>

    <main>
        <section>
            <article>
                <div class="register-top">
                    <h2>CREAR CUENTA</h2>
                    <div class="line"></div>
                </div>
            <div class="register-main">
                <form action="/users/register" method="POST" class="create-form" enctype="multipart/form-data">
                    <div class="errores">
                        <ul></ul>
                    </div>
                    <div class="control-form">
                        <label for="name">Nombre:<input type="text" class="control" name="name" id="name" placeholder="Ej: Mariana" value="<%= locals.oldData ? oldData.name : null %>"></label>
                        <% if (locals.errors && errors.name) { %>
                            <div class="danger">
                            <%= errors.name.msg %>
                            </div>
                           <% } %>
                    </div>
                    <div class="control-form">
                        <label for="last-name">Apellido:<input type="text" class="control" name="lastname" id="last-name" placeholder="Ej: Perez" value="<%= locals.oldData ? oldData.lastname : null %>"></label>
                        <% if (locals.errors && errors.lastname) { %>
                            <div class="danger">
                            <%= errors.lastname.msg %>
                            </div>
                           <% } %>
                    </div>
                    <div class="control-form">
                        <label for="dni">DNI:<input type="text" class="control" name="dni" id="dni" placeholder="Ej: XXXXXXXX" value="<%= locals.oldData ? oldData.dni : null %>"></label>
                        <% if (locals.errors && errors.dni) { %>
                            <div class="danger">
                            <%= errors.dni.msg %>
                            </div>
                           <% } %>
                    </div>
                    <div class="control-form">
                        <label for="address">Dirección:<input type="text" class="control" name="address" id="address" placeholder="Ej: Calle 123" value="<%= locals.oldData ? oldData.address : null %>"></label>
                    </div>
                    <div class="control-form">
                        <label for="phone">Teléfono:<input type="text" class="control" name="phone" id="phone" placeholder="Ej: 1165408578" value="<%= locals.oldData ? oldData.phone : null %>"></label>
                        
                    </div>
                    
                    <div class="control-form">
                        <label for="e-mail">Email:<input type="text" class="control" name="email" id="email" placeholder="Ej: hola@gmail.com" value="<%= locals.oldData ? oldData.email : null %>"></label>
                        <% if (locals.errors && errors.email) { %>
                            <div class="danger">
                            <%= errors.email.msg %>
                            </div>
                           <% } %>
                    </div>
                    <div class="control-form">
                        <label for="password">Contraseña:<input  type="password" class="control" name="password" id="password"><i value="<%= locals.oldData ? oldData.password : null %>"></i></label>
                        <% if (locals.errors && errors.password) { %>
                            <div class="danger">
                            <%= errors.password.msg %>
                            </div>
                           <% } %>
                    </div>
                    <div class="control-form">
                        <label for="image-cover">Imagen de perfil:<input type="file" class="control" name="image" id="image" accept="image/png, image/jpeg">
                        </label>
                        <% if (locals.errors && errors.image) { %>
                            <div class="danger">
                            <%= errors.image.msg %>
                            </div>
                           <% } %>
                    </div>
                    
                    <!-- <img class="captcha" src="/img/png/captcha.png" alt=""> -->

                    <div class="create-account-button">
                        <button type="submit" class="form-button form-button-primary">CREAR CUENTA</button>
                    </div>
                  </form>
                  <div class="login">
                    <a href="/users/login">¿Ya tenés una cuenta? Inicia sesión</a>
                  </div>
            </div>
            </article>
        </section>
    </main>

    <%- include ('../partials/footer') %>

    <script src="/js/registerValidations.js"></script>

</body>

</html>